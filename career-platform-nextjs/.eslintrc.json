{
  "extends": [
    "next/core-web-vitals",
    "eslint:recommended"
  ],
  "rules": {
    "no-console": "off",
    "@typescript-eslint/no-unused-vars": "off",
    "react-hooks/exhaustive-deps": "off",
    "no-undef": "off",
    "no-redeclare": "off",
    "@next/next/no-img-element": "off",
    "no-constant-condition": "off",
    "no-useless-catch": "off",
    "no-unused-vars": "off"
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "public/",
    "*.config.js",
    "*.config.ts",
    "*.d.ts"
  ]
}
